# =========================================
# Development Environment Configuration
# =========================================

PORT=3000


# =========================================
# JWT Access Token Configuration
# =========================================

JWT_ACCESS_SECRET=your-access-secret-key
JWT_ACCESS_EXPIRES_IN_MS=900000


# =========================================
# PostgreSQL Database Configuration
# =========================================

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DATABASE=report-hub


# =========================================
# Super Admin Account Configuration
# =========================================

SUPER_ADMIN_PASSWORD=YourSecureAdminPassword123!

# Local file storage
BASE_PATH=./uploads

***REMOVED*** storage
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_BUCKET=your-bucket-name
SUPABASE_URL=https://your-project-id.supabase.co


# =========================================
# Firebase Configuration
# =========================================

STORAGE_BUCKET=******
FIREBASE_SERVICE_ACCOUNT=******


# =========================================
# SMTP Email Configuration
# =========================================

SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

SMTP_USER=example@gmail.com
SMTP_PASS=****************
SMTP_FROM=example@gmail.com


# =========================================
# Rate Limiting (Throttling)
# =========================================

RATE_LIMIT_TTL=60
RATE_LIMIT_MAX=100


# =========================================
# Logger Configuration
# =========================================

# Log level: error | warn | info | debug | verbose
LOG_LEVEL=debug

# Root directory where logs are stored
LOG_DIR=./logs

# Max size before rotation (e.g., "20m", "500k")
LOG_MAX_SIZE=20m

# How many days to keep general logs
LOG_MAX_FILES=14d

# How many days to keep error logs
LOG_ERROR_MAX_FILES=30d

# Compress rotated logs (true/false)
LOG_ZIP_ARCHIVE=true

# Output logs to console (true/false)
LOG_CONSOLE=false

# Log all HTTP requests (true/false)
LOG_HTTP=true

# Log slow requests (true/false)
LOG_SLOW_REQUESTS=true

# Slow request threshold in milliseconds
LOG_SLOW_REQUEST_THRESHOLD=1000
