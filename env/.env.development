# -----------------------------------------------------------------------------
# Application Configuration
# -----------------------------------------------------------------------------
PORT=3000

# -----------------------------------------------------------------------------
# Database Configuration (PostgreSQL)
# -----------------------------------------------------------------------------
POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DATABASE=shakwa

# -----------------------------------------------------------------------------
# Cache Configuration (Redis)
# -----------------------------------------------------------------------------
REDIS_URL=redis://localhost:6379

# -----------------------------------------------------------------------------
# Authentication & Security (JWT)
# -----------------------------------------------------------------------------
# Access Token
JWT_ACCESS_SECRET=your_jwt_access_secret_min_32_chars_long
JWT_ACCESS_EXPIRES_IN_S=1296000

# Refresh Token
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_chars_long
JWT_REFRESH_EXPIRES_IN_S=604800

# Security Token (Email Verification / Password Reset)
JWT_SECURITY_SECRET=your_jwt_security_secret_min_32_chars_long
JWT_SECURITY_EXPIRES_IN_S=300

# Super Admin
SUPER_ADMIN_PASSWORD=YourSecureAdminPassword123!

# -----------------------------------------------------------------------------
# Mail Service Configuration
# -----------------------------------------------------------------------------
# Default Sender
SMTP_FROM=noreply@example.com

# Resend Provider
RESEND_API_KEY=re_your_resend_api_key_here

# SendGrid Provider
SENDGRID_API_KEY=your_sendgrid_api_key

# SMTP Provider
SMTP_HOST=smtp.example.com
SMTP_PORT=587
SMTP_USER=your_smtp_username
SMTP_PASS=your_smtp_password

