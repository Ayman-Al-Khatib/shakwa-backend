# =========================================
# Development Environment Configuration
# =========================================

# Application Port
PORT=3000


# =========================================
# JWT Access Token Configuration
# =========================================

# Secret key used to sign access tokens
JWT_ACCESS_SECRET=your-access-secret-key

# Access token expiration time in milliseconds
JWT_ACCESS_EXPIRES_IN_MS=900000


# =========================================
# PostgreSQL Database Configuration
# =========================================

POSTGRES_HOST=localhost
POSTGRES_PORT=5432
POSTGRES_USER=postgres
POSTGRES_PASSWORD=password
POSTGRES_DATABASE=report-hub


# =========================================
# Super Admin Account Configuration
# =========================================

# Default password for the initial super admin
SUPER_ADMIN_PASSWORD=YourSecureAdminPassword123!

# Local file storage path
BASE_PATH=./uploads

***REMOVED*** storage
SUPABASE_SERVICE_ROLE_KEY=your-supabase-service-role-key
SUPABASE_BUCKET=your-bucket-name
SUPABASE_URL=https://your-project-id.supabase.co


# =========================================
# Firebase Configuration
# =========================================

# Firebase Storage Bucket
STORAGE_BUCKET=******

# Firebase Service Account (path or JSON string)
FIREBASE_SERVICE_ACCOUNT=******


# =========================================
# SMTP Email Configuration
# =========================================

# SMTP Host and Port
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false

***REMOVED***
SMTP_USER=example@gmail.com
SMTP_PASS=****************

# Default Sender Email Address
SMTP_FROM=example@gmail.com


# =========================================
# Rate Limiting (Throttling) Configuration
# =========================================

# Time To Live for rate limit window (in seconds)
RATE_LIMIT_TTL=60

# Maximum number of requests allowed per TTL per key
RATE_LIMIT_MAX=100
