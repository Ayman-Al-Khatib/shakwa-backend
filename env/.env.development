# File: .env

# =========================================
# Development Environment Configuration
# =========================================

PORT=3000


# =========================================
# JWT Access Token Configuration
# =========================================

# Secret key used to sign access tokens (at least 32 characters)
JWT_ACCESS_SECRET=your_jwt_access_secret_min_32_chars_long
# Access token expiration time in seconds (e.g. 15 days = 1296000)
JWT_ACCESS_EXPIRES_IN_S=1296000


# =========================================
# JWT Refresh Token Configuration (Required)
# =========================================

# Secret key used to sign refresh tokens (at least 32 characters)
JWT_REFRESH_SECRET=your_jwt_refresh_secret_min_32_chars_long
# Refresh token expiration time in seconds (e.g. 7 days = 604800)
JWT_REFRESH_EXPIRES_IN_S=604800


# =========================================
# JWT Security Token Configuration (Required)
# Used for email verification and password reset
# =========================================

# Secret key used to sign security tokens (at least 32 characters)
JWT_SECURITY_SECRET=your_jwt_security_secret_min_32_chars_long
# Security token expiration time in seconds (e.g. 5 minutes = 300)
JWT_SECURITY_EXPIRES_IN_S=300


# =========================================
# PostgreSQL Database Configuration
# =========================================

